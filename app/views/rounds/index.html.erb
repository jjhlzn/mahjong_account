<h1>Listing rounds</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Player1win</th>
      <th>Player2win</th>
      <th>Player3win</th>
      <th>Player4win</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      <tr>
        <td><%= round.game_id %></td>
        <td><%= round.player1Win %></td>
        <td><%= round.player2Win %></td>
        <td><%= round.player3Win %></td>
        <td><%= round.player4Win %></td>
        <td><%= link_to 'Show', round %></td>
        <td><%= link_to 'Edit', edit_round_path(round) %></td>
        <td><%= link_to 'Destroy', round, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

