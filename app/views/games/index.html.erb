<% provide(:head_name, '牌局列表') %>

<table id="games_table" width="100%">
  <thead>
    <tr>
      <th>玩家1</th>
      <th>玩家2</th>
      <th>玩家3</th>
      <th>玩家4</th>
      <th>牌数</th>
      <th>单价</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.player1 %></td>
        <td><%= game.player2 %></td>
        <td><%= game.player3 %></td>
        <td><%= game.player4 %></td>
        <td><%= game.chipCount %></td>
        <td><%= game.price %></td>
        <td><%= link_to '查看', game %></td>
        <td><%= link_to '编辑', edit_game_path(game) %></td>
        <td><%= link_to '删除', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

