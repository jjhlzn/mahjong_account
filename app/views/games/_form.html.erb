<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div data-role="fieldcontain">

    <%= f.label :player1, "成员1:" %>
    <%= f.text_field :player1 %>

    <%= f.label :player2, "成员2:"%>
    <%= f.text_field :player2 %>

    <%= f.label :player3, "成员3:" %>
    <%= f.text_field :player3 %>

    <%= f.label :player4, "成员4:" %>
    <%= f.text_field :player4 %>

    <div style='display: none;'>
    <%= f.label :chipCount, "牌数:" %>
    <%= f.select :chipCount, [[50, 50], [60, 60]]%>
    </div>

    <%= f.label :price, "每张牌:" %>
    <%= f.select :price, [[5, 5], [10, 10], [20, 20],[30, 30]]  %>
  </div>
  <div class="actions">
    <%= f.submit "创建牌局", onclick: "return check_before_submit_game()"%>
  </div>

<% end %>
